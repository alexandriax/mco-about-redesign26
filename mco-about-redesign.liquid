<script>
  (function(){
        const root = document.getElementById("mco-about-{{ section.id }}");
        if (!root) return;

        /* ========= VVS accordion + reorder + image swap ========= */
        const vvs = root.querySelector('[data-vvs]');
        const list = root.querySelector('[data-vvs-list]');
        const mediaWrap = root.querySelector('[data-vvs-media]');

        if (vvs && list && mediaWrap) {
            const items = Array.from(list.querySelectorAll('[data-vvs-item]'));
            const btns  = Array.from(list.querySelectorAll('[data-vvs-btn]'));
            const panels = Array.from(list.querySelectorAll('[data-vvs-panel]'));
            const images = Array.from(mediaWrap.querySelectorAll('[data-vvs-image]'));
            const emptyMedia = mediaWrap.querySelector('[data-vvs-empty]');

            // Save original order so can restore on collapse
            const originalOrder = items.map(el => el.dataset.vvsItem);

            function showMedia(idOrNull){
                images.forEach(img => img.hidden = (img.dataset.vvsImage !== idOrNull));
                if (emptyMedia) emptyMedia.hidden = !!idOrNull;
                if (!idOrNull) images.forEach(img => img.hidden = true);
            }

            function collapseAll(){
                btns.forEach(b => b.setAttribute('aria-expanded','false'));
                panels.forEach(p => p.hidden = true);

                // restore original order
                originalOrder.forEach(id => {
                    const el = items.find(x => x.dataset.vvsItem === id);
                    if (el) list.appendChild(el);
                });

                showMedia(null);
            }

            function open(id){
                // collapse all first (but don't restore order until after we move selected)
                btns.forEach(b => b.setAttribute('aria-expanded','false'));
                panels.forEach(p => p.hidden = true);

                // move selected item to top
                const selectedItem = items.find(x => x.dataset.vvsItem === id);
                if (selectedItem) list.prepend(selectedItem);

                // open selected
                const btn = btns.find(b => b.dataset.vvsBtn === id);
                const panel = panels.find(p => p.dataset.vvsPanel === id);

                if (btn) btn.setAttribute('aria-expanded','true');
                if (panel) panel.hidden = false;

                showMedia(id);
            }

            // Start collapsed
            collapseAll();

            btns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const id = btn.dataset.vvsBtn;
                    const isOpen = btn.getAttribute('aria-expanded') === 'true';
                    if (isOpen) collapseAll();
                    else open(id);
                });
            });
        }


    /* ========= Carousel auto-scroll ========= */
    const strip = root.querySelector('[data-mco-strip]');
    if (strip && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      const track = strip.querySelector('[data-strip-track]');
      if (!track) return;

      const speed = parseFloat(strip.dataset.speed || '35');
      let raf = null;
      let last = null;
      let x = 0;

      const originalHTML = track.innerHTML.trim();
      if (!originalHTML) return;

      track.innerHTML = originalHTML + originalHTML;

      let paused = false;
      strip.addEventListener('mouseenter', () => paused = true);
      strip.addEventListener('mouseleave', () => paused = false);

      function step(ts){
        if (!last) last = ts;
        const dt = (ts - last) / 1000;
        last = ts;

        if (!paused) {
          x -= speed * dt;
          const halfWidth = track.scrollWidth / 2;
          if (Math.abs(x) >= halfWidth) x = 0;
          track.style.transform = `translateX(${x}px)`;
        }
        raf = requestAnimationFrame(step);
      }

      raf = requestAnimationFrame(step);
    }
  })();
</script>

