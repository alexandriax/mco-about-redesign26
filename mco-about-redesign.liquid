    letter-spacing: .08em;
    text-transform: uppercase;
    font-weight: 600;
  }

  #mco-about-{{ section.id }} .mco-about__sectionLabelUnderline{
    width: 44px;
    height: 3px;
    background: #f7aec4;
  }

  #mco-about-{{ section.id }} .mco-about__copy{
    font-size: 15px;
    line-height: 1.7;
    max-width: 52ch;
  }

  /* Screen 2 */
  #mco-about-{{ section.id }} .mco-about__cell--pink{
    background: {{ section.settings.pink_bg }};
    padding: 60px 56px;
    display: grid;
    align-items: center;
  }

