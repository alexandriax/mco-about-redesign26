<section
  id="mco-about-{{ section.id }}"
  class="mco-about"
  data-mco-about
>
  <!-- SCREEN 1 -->
  <div class="mco-about__screen mco-about__screen--one" data-mco-screen>
    <div class="mco-about__top">
      <div class="mco-about__logoWrap">
        {% if section.settings.brand_logo != blank %}
          {{ section.settings.brand_logo | image_url: width: 1600 | image_tag: class: 'mco-about__logo', loading: 'eager', alt: section.settings.brand_logo_alt }}
        {% else %}
          <div class="mco-about__logoFallback">MCoBeauty.</div>
        {% endif %}
      </div>

      <div class="mco-about__taglineWrap">
        <div class="mco-about__tagline">{{ section.settings.tagline }}</div>
      </div>
    </div>

    <div class="mco-about__grid mco-about__grid--twoCol">
      <div class="mco-about__cell mco-about__cell--aboutMedia">
        {% if section.settings.about_image != blank %}
          <div class="mco-about__aboutImageFrame">
            {{ section.settings.about_image | image_url: width: 2000 | image_tag: class: 'mco-about__aboutImg', loading: 'lazy', alt: section.settings.about_image_alt }}

            {% if section.settings.about_image_caption != blank %}
              <div class="mco-about__aboutImageCaption">{{ section.settings.about_image_caption }}</div>
            {% endif %}
          </div>
        {% else %}
          <div class="mco-about__placeholder mco-about__placeholder--image">
            <span>Upload About image</span>
          </div>
        {% endif %}
      </div>

      <div class="mco-about__cell mco-about__cell--aboutText">
        <div class="mco-about__sectionLabel">
          <span class="mco-about__sectionLabelText">{{ section.settings.about_label }}</span>
          <span class="mco-about__sectionLabelUnderline" aria-hidden="true"></span>
        </div>

        {% if section.settings.about_text != blank %}
          <div class="mco-about__copy rte">{{ section.settings.about_text }}</div>
        {% else %}
          <div class="mco-about__copy mco-about__copy--placeholder">
            Add your About copy in the section settings.
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- SCREEN 2 -->
  <div class="mco-about__screen mco-about__screen--two" data-mco-screen>
    <div class="mco-about__grid mco-about__grid--twoCol">
      <div class="mco-about__cell mco-about__cell--pink">
        {% if section.settings.pink_text != blank %}
          <div class="mco-about__pinkCopy rte">{{ section.settings.pink_text }}</div>
        {% else %}
          <div class="mco-about__pinkCopy mco-about__copy--placeholder" style="color:#fff;">
            Add your pink-section copy in settings.
          </div>
        {% endif %}
      </div>

      <div class="mco-about__cell mco-about__cell--model">
        {% if section.settings.model_image != blank %}
          {{ section.settings.model_image | image_url: width: 2000 | image_tag: class: 'mco-about__img', loading: 'lazy', alt: section.settings.model_image_alt }}
        {% else %}
          <div class="mco-about__placeholder mco-about__placeholder--image">
            <span>Upload Model image</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- SCREEN 3 -->
  <div class="mco-about__screen mco-about__screen--three" data-mco-screen>
    <div class="mco-about__grid mco-about__grid--twoCol">
      <div class="mco-about__cell mco-about__cell--vvsMedia">
        <div class="mco-vvsMedia" data-vvs-media>
          {% for block in section.blocks %}
            {% if block.type == 'vvs_item' %}
              <div class="mco-vvsMedia__item" data-vvs-image="{{ block.id }}" hidden>
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 2000 | image_tag: class: 'mco-about__img', loading: 'lazy', alt: block.settings.image_alt }}
                {% else %}
                  <div class="mco-about__placeholder mco-about__placeholder--image">
                    <span>Upload image for {{ block.settings.nav_label }}</span>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}

          <!-- Collapsed state (shown until click) -->
          <div class="mco-vvsMedia__empty" data-vvs-empty>
             {% if section.settings.vvs_collapsed_image != blank %}
             {{ section.settings.vvs_collapsed_image | image_url: width: 2000 | image_tag: class: 'mco-about__img', loading: 'lazy', alt: section.settings.vvs_collapsed_image_alt }}
             {% else %}
             <div class="mco-about__placeholder mco-about__placeholder--image">
                 <span>Upload “VVS collapsed image”</span>
             </div>
             {% endif %}
           </div>
        </div>
     </div>

      <div class="mco-about__cell mco-about__cell--vvsText">
        <div class="mco-vvs" data-vvs>
          <div class="mco-vvs__textArea" data-vvs-panels>
            {% for block in section.blocks %}
              {% if block.type == 'vvs_item' %}
                <div class="mco-vvs__panel" data-vvs-panel="{{ block.id }}" hidden>
                  <h3 class="mco-vvs__heading">{{ block.settings.title }}</h3>
                  {% if block.settings.text != blank %}
                    <div class="mco-about__copy rte">{{ block.settings.text }}</div>
                  {% else %}
                    <div class="mco-about__copy mco-about__copy--placeholder">
                      Add copy for {{ block.settings.nav_label }} in this block.
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}

            <div class="mco-vvs__panel mco-vvs__panel--empty" data-vvs-panel-empty>
              <h3 class="mco-vvs__heading">{{ section.settings.vvs_empty_title }}</h3>
              <div class="mco-about__copy">{{ section.settings.vvs_empty_subtitle }}</div>
            </div>
          </div>

          <div class="mco-vvs__nav" role="tablist" aria-label="Vision Values Sustainability">
            {% for block in section.blocks %}
              {% if block.type == 'vvs_item' %}
                <button
                  class="mco-vvs__btn"
                  type="button"
                  role="tab"
                  aria-selected="false"
                  data-vvs-btn="{{ block.id }}"
                >
                  <span class="mco-vvs__btnText">{{ block.settings.nav_label }}</span>
                  <span class="mco-vvs__btnLine" aria-hidden="true"></span>
                </button>
              {% endif %}
            {% endfor %}
          </div>

          {% if section.settings.vvs_hint != blank %}
            <div class="mco-vvs__hint">{{ section.settings.vvs_hint }}</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <!-- AUTOSCROLL STRIP -->
  <div class="mco-strip" data-mco-strip data-speed="{{ section.settings.strip_speed | default: 35 }}">
    <div class="mco-strip__viewport">
      <div class="mco-strip__track" data-strip-track>
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'strip_image' %}
              <div class="mco-strip__tile" {{ block.shopify_attributes }}>
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 1600 | image_tag: class: 'mco-strip__media', loading: 'lazy', alt: block.settings.alt }}
                {% else %}
                  <div class="mco-about__placeholder mco-about__placeholder--strip"><span>Strip image</span></div>
                {% endif %}
              </div>

            {% when 'strip_video' %}
              <div class="mco-strip__tile" {{ block.shopify_attributes }}>
                {% if block.settings.video != blank %}
                  {{
                    block.settings.video
                    | video_tag:
                      class: 'mco-strip__media',
                      muted: true,
                      playsinline: true,
                      loop: block.settings.loop,
                      autoplay: block.settings.autoplay_video,
                      controls: block.settings.show_controls,
                      preload: 'metadata'
                  }}
                {% else %}
                  <div class="mco-about__placeholder mco-about__placeholder--strip"><span>Strip video</span></div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

