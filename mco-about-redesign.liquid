    color: #fff;
    font-size: 15px;
    line-height: 1.7;
    max-width: 44ch;
  }

  /* Screen 3 - VVS */
  #mco-about-{{ section.id }} .mco-about__cell--vvsText{
    padding: 56px;
    display: grid;
    align-content: center;
  }

  #mco-about-{{ section.id }} .mco-vvs__heading{
