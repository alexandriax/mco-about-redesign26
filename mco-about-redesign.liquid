    }
  }

  @media (max-width: 900px){
    #mco-about-{{ section.id }} .mco-about__grid{
      grid-template-columns: 1fr;
    }
    #mco-about-{{ section.id }} .mco-about__cell{
      border-right: 0;
      min-height: auto;
    }
    #mco-about-{{ section.id }} .mco-about__cell--aboutText,
    #mco-about-{{ section.id }} .mco-about__cell--pink,
    #mco-about-{{ section.id }} .mco-about__cell--vvsText{
      padding: 34px 22px;
    }
    #mco-about-{{ section.id }} .mco-strip__tile{
      width: 70vw;
      max-width: none;
    }
  }

  @media (prefers-reduced-motion: reduce){
    #mco-about-{{ section.id }} .mco-strip__track{
      transform: none !important;
    }
  }
</style>

<script>
  (function(){
    const root = document.getElementById("mco-about-{{ section.id }}");
    if (!root) return;

    /* ========== menu click behavior (collapsed by default) ========== */
    const vvs = root.querySelector('[data-vvs]');
    const panelsWrap = root.querySelector('[data-vvs-panels]');
    const mediaWrap = root.querySelector('[data-vvs-media]');
    if (vvs && panelsWrap && mediaWrap) {
      const btns = Array.from(vvs.querySelectorAll('[data-vvs-btn]'));
      const panels = Array.from(panelsWrap.querySelectorAll('[data-vvs-panel]'));
      const images = Array.from(mediaWrap.querySelectorAll('[data-vvs-image]'));

      function collapseAll(){
        btns.forEach(b => b.setAttribute('aria-selected', 'false'));
        panels.forEach(p => p.hidden = true);
        images.forEach(i => i.hidden = true);
      }

      function open(id){
        collapseAll();
        const btn = btns.find(b => b.dataset.vvsBtn === id);
        const panel = panels.find(p => p.dataset.vvsPanel === id);
        const img = images.find(i => i.dataset.vvsImage === id);

        if (btn) btn.setAttribute('aria-selected', 'true');
        if (panel) panel.hidden = false;
        if (img) img.hidden = false;
      }

      // Start collapsed 
      collapseAll();

      // Click = toggle
      btns.forEach(b => {
        b.addEventListener('click', () => {
          const id = b.dataset.vvsBtn;
          const isOpen = b.getAttribute('aria-selected') === 'true';
          if (isOpen) {
            collapseAll();
          } else {
            open(id);
          }
        });
      });
    }

    /* ========== Carousel auto-scroll ========== */
    const strip = root.querySelector('[data-mco-strip]');
    if (strip && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      const track = strip.querySelector('[data-strip-track]');
      if (!track) return;

      const speed = parseFloat(strip.dataset.speed || '35'); // px/sec
      let raf = null;
      let last = null;
      let x = 0;

      // Duplicate track contents for seamless loop
      const originalHTML = track.innerHTML;
      track.innerHTML = originalHTML + originalHTML;

      // Pause on hover
      let paused = false;
      strip.addEventListener('mouseenter', () => paused = true);
      strip.addEventListener('mouseleave', () => paused = false);

      function step(ts){
        if (!last) last = ts;
        const dt = (ts - last) / 1000;
        last = ts;

        if (!paused) {
          x -= speed * dt;
          const halfWidth = track.scrollWidth / 2;
          if (Math.abs(x) >= halfWidth) x = 0;
          track.style.transform = `translateX(${x}px)`;
        }

        raf = requestAnimationFrame(step);
      }

      raf = requestAnimationFrame(step);
    }
  })();
</script>

