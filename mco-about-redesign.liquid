  }

  #mco-about-{{ section.id }} .mco-strip__track{
    display: flex;
    gap: 0;
    will-change: transform;
  }

  #mco-about-{{ section.id }} .mco-strip__tile{
    flex: 0 0 auto;
    width: 25vw;        
    max-width: 420px;
    min-width: 260px;
    height: 220px;
    border-right: 1px solid rgba(0,0,0,.18);
    overflow: hidden;
    background: #000;
  }

