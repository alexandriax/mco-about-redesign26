    align-content: center;
  }

  #mco-about-{{ section.id }} .mco-about__sectionLabel{
    display: inline-flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 18px;
    width: fit-content;
  }

  #mco-about-{{ section.id }} .mco-about__sectionLabelText{
